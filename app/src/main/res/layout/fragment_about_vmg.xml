<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="demo.videomediagroup.com.vmgdemo.Pages.AboutVMGFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll__about"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img_logo_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:background="@color/primary_light"
                android:elevation="16dp"
                app:srcCompat="@mipmap/logo_video_media_group" />

            <TextView
                android:id="@+id/text_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/video_media_group_text"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="normal" />


            <WebView
                android:id="@+id/web_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/text_about1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/lorem_ipsum"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
