<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/nav_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.13" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1976D2"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Inread"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/scrollview_vmg"
            style="?android:attr/borderlessButtonStyle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#90CAF9"
            android:elevation="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="scrollview"
            android:textColor="#212121"
            android:theme="?android:selectableItemBackground"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1976D2"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Inread Top"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/in_read_top_listview"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#90CAF9"
            android:elevation="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="ListView"
            android:textColor="#212121"
            android:theme="?android:selectableItemBackground" />

        <Button
            android:id="@+id/in_read_top_recyclerview"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#90CAF9"
            android:elevation="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="recyclerview"
            android:textColor="#212121"
            android:theme="?android:selectableItemBackground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1976D2"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Info/Home"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/home"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Home"
            android:textColor="#212121"
            android:theme="?android:selectableItemBackground" />


        <Button
            android:id="@+id/about_vmg"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/primary_light"
            android:elevation="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="About VMG"
            android:textColor="#212121"
            android:theme="?android:selectableItemBackground" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@color/primary_dark"
            android:elevation="10dp"
            app:srcCompat="@mipmap/logo_video_media_group" />


    </LinearLayout>


</ScrollView>

